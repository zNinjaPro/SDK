{
  "name": "@zninja/shielded-pool-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for privacy-preserving token transfers on Solana",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha -r ts-node/register tests/unit.test.ts tests/crypto.test.ts tests/burn.test.ts tests/merkle.zeros.test.ts tests/poseidon.variant.test.ts tests/prover.merkleOrder.test.ts tests/txBuilder.pda.test.ts --timeout 60000 --exit",
    "test:all": "mocha -r ts-node/register tests/**/*.test.ts --timeout 60000 --exit",
    "test:unit": "mocha -r ts-node/register tests/unit.test.ts tests/burn.test.ts --exit",
    "test:e2e": "mocha -r ts-node/register tests/e2e.test.ts --timeout 120000 --exit",
    "test:e2e:fast": "mocha -r ts-node/register tests/e2e_fast.test.ts --timeout 120000 --exit",
    "test:devnet": "mocha -r ts-node/register tests/devnet-smoke.test.ts --timeout 600000 --exit",
    "e2e:validator": "./scripts/start-validator.sh --quiet",
    "e2e:validator:stop": "./scripts/stop-validator.sh",
    "e2e:demo": "node test-simple.js",
    "e2e": "npm-run-all -p e2e:validator --silent && sleep 2 && npm run e2e:demo",
    "e2e:clean": "ps -ax | grep solana-test-validator | grep -v grep | awk '{print $1}' | xargs -I{} kill -9 {} 2>/dev/null || true",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "solana",
    "privacy",
    "zero-knowledge",
    "zk-snarks",
    "shielded-pool",
    "token"
  ],
  "author": "zNinja",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0",
    "bip39": "^3.1.0",
    "bs58": "^5.0.0",
    "circomlibjs": "^0.1.7",
    "ed25519-hd-key": "^1.3.0",
    "snarkjs": "^0.7.5",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^6.2.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
